@model IEnumerable<ProjetoBackend.Models.ItemVenda>

@{
    ViewData["Title"] = "Index";
    var idVendaAtual = ViewData["idVendaAtual"];
}
<div class="container">
    <div style="font-family:'Shrikhand', sans-serif;">
        <div class="text-light">
            <h1>Item de Venda</h1>
        </div>
        <p>
            <a asp-action="Create" asp-route-id="@idVendaAtual" class="text-black text-decoration-none text-decoration-underline">Cadastro</a>
        </p>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Venda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorUnitario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venda.VendaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorUnitario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ItemVendaId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ItemVendaId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ItemVendaId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>