@model ProjetoBackend.Models.ItemVenda

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div style="color:#705FA6;">
        <h1 style="font-family:'Shrikhand',sans-serif;">Criar</h1>
    </div>
    <div class="text-light">
        <h2 style="font-family:'Shrikhand',sans-serif;">Itens de Venda</h2>
    </div>
    <hr />
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="justify-content-center p-4 border rounded-4" style="background:#705FA6; width: 120%;">
                <div style="font-family:'Itim',sans-serif;">
                    <div style="color:#FFFFFF;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="VendaId" class="control-label"></label>
                            <input asp-for="VendaId" class="form-control" value=@ViewData["VendaId"] />
                        </div>

                        <div class="form-group">
                            <label asp-for="Quantidade" class="control-label"></label>
                            <input asp-for="Quantidade" class="form-control" id="Quantidade" />
                            <span asp-validation-for="Quantidade" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ProdutoId" class="control-label"></label>
                            <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId" id="produtoId"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="ValorUnitario" class="control-label"></label>
                            <input asp-for="ValorUnitario" class="form-control" id="ValorUnitario" />
                            <span asp-validation-for="ValorUnitario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ValorTotal" class="control-label"></label>
                            <input asp-for="ValorTotal" class="form-control" id="ValorTotal" />
                            <span asp-validation-for="ValorTotal" class="text-danger"></span>

                        </div>
                    </div>
        </form>
    </div>
</div>
<div style="font-family:'Itim',sans-serif;" class="d-flex justify-content-evenly mt-4">
    <input type="submit" value="Criar" class="btn btn-lg text-light" style="background:#705FA6" />
    <a asp-action="Index" class="btn btn-lg text-light" style="background:#705FA6">Voltar</a>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
