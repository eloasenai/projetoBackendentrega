@model ProjetoBackend.Models.Venda

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div style="color:#705FA6">
        <h1 style="font-family:'Shrikhand',sans-serif;">Cadastro de</h1>
    </div>
    <div class="text-light">
        <h1 style="font-family:'Shrikhand',sans-serif;">Vendas</h1>
    </div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div style="font-family:'Itim',sans-serif;">

                    <div class="justify-content-center p-4 border rounded-4 col-12" style="background:#705FA6;">
                        <div style="color:#FFFFFF;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group mb-3">
                                <label asp-for="ClienteId" class="control-label">Cliente</label>
                                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ValorTotal" class="control-label">Valor Total</label>
                                <input asp-for="ValorTotal" readonly="readonly" value="0.00" class="form-control" />
                            </div>

                            <div class="form-group">
                                <input type="hidden" asp-for="NotaFiscal" class="form-control" />
                            </div>

                            <div class="form-group">
                                <input type="hidden" asp-for="DataVenda" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div style="font-family:'Itim',sans-serif;" class="col-9 d-flex justify-content-evenly mt-4">
                    <input type="submit" value="Criar" class="btn btn-lg text-light" style="background:#705FA6" />
                    <a asp-action="Index" class="btn btn-lg text-light" style="background:#705FA6">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
