@model ProjetoBackend.Models.Fornecedor

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h1 style="font-family:'Shrikhand',sans-serif;color:#FFFFFF">Delete</h1>

    <h2 style="font-family:'Shrikhand',sans-serif;color:#413271">Fornecedor</h2>
    <div class="justify-content-center p-3 border rounded-4 col-9" style="background:#413271">
        <div style="font-family:'Itim',sans-serif;">
            <div style="color:#FFFFFF">
                <h4 style="font-family:'Shrikhand',sans-serif;color:white">Você deseja deletar isso?</h4>
                <div>
                    <hr />
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Celular)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Celular)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CnpjCpf)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CnpjCpf)
                    </dd>
                </div>
            </div>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="FornecedorId" />
        <input type="submit" value="Deletar" class="btn btn-danger" style="background:#782988" /> |
        <a asp-action="Index" class="btn text-light" style="background:#6D5DA4">Voltar</a>
    </form>
</div>