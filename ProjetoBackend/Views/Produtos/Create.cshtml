@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Criar";
}
<div class="container">
    <div style="color:#705FA6;">
        <h1 style="font-family:'Shrikhand',sans-serif;">Cadastro de</h1>
    </div>
    <div class="text-light">
        <h1 style="font-family:'Shrikhand',sans-serif;">Produto</h1>
    </div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div style="font-family:'Itim',sans-serif;">
                    <div class="justify-content-center p-4 border rounded-4" style="background:#705FA6; width: 120%;">
                        <div style="color:#FFFFFF;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3">
                                <label asp-for="Nome" class="control-label">Nome</label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Preco" class="control-label">Preço</label>
                                <input asp-for="Preco" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Estoque" class="control-label">Estoque</label>
                                <input asp-for="Estoque" class="form-control" />
                                <span asp-validation-for="Estoque" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="CategoriaId" class="control-label">Categoria</label>
                                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="font-family:'Itim',sans-serif;" class="col-9 d-flex justify-content-evenly mt-4">
                    <input type="submit" value="Criar" class="btn btn-lg text-light" style="background:#705FA6" />
                    <a asp-action="Index" class="btn btn-lg text-light" style="background:#705FA6">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

