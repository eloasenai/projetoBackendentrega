@model IEnumerable<ProjetoBackend.Models.Produto>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div style="font-family:'Shrikhand', sans-serif;">
        <h1 class="text-light">Produtos</h1>
    </div>
    <div style="font-family:'Shrikhand', sans-serif;">
        <p>
            <a asp-action="Create" class="text-black text-decoration-none text-decoration-underline">Cadastrar</a>
        </p>
    </div>
    <div style="font-family:'Itim',sans-serif;">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estoque)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <body>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Estoque)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Categoria.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProdutoId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProdutoId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProdutoId">Delete</a>
                    </td>
                </tr>
                }
            </body>
    </div>
    </table>
</div>