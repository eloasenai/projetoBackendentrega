@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Detales";
}
<div class="container">
    <h1 style="font-family:'Shrikhand',sans-serif;color:#FFFFFF">Detalhes</h1>

    <div>
        <h2 style="font-family:'Shrikhand',sans-serif;color:#413271">Produto</h2>
        <hr />
        <div class="justify-content-center p-3 border rounded-4 col-9" style="background:#413271">
            <div style="font-family:'Itim',sans-serif;">
                <div style="color:#FFFFFF">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Preco)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Preco)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Estoque)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Estoque)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Categoria)
                    </dd>
                </div>
            </div>
        </div>
    </div>


    <div>
        <input type="submit" value="Editar" class="btn btn-danger" style="background:#782988" /> |
        <a asp-action="Index" class="btn text-light" style="background:#6D5DA4">Voltar</a>
    </div>
</div>