@model ProjetoBackend.Models.Categoria

@{
    ViewData["Title"] = "Cadastrar";
}
<div class="container">
    <div style="color:#705FA6;">
        <h1 style="font-family:'Shrikhand',sans-serif;">Categoria de</h1>
    </div>
    <div class="text-light">
        <h2 style="font-family:'Shrikhand',sans-serif;">Produto</h2>
    </div>
    <hr />
    <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <!-- Ampliando o formulário -->
            <div class="justify-content-center p-4 border rounded-4" style="background:#705FA6; width: 120%;">
                <div style="font-family:'Itim',sans-serif;">
                    <div style="color:#FFFFFF;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="control-label">Nome</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Botões ampliados -->
            <div style="font-family:'Itim',sans-serif;" class="d-flex justify-content-evenly mt-4">
                <input type="submit" value="Criar" class="btn btn-lg text-light" style="background:#705FA6" />
                <a asp-action="Index" class="btn btn-lg text-light" style="background:#705FA6">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
