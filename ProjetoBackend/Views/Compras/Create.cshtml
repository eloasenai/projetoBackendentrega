@model ProjetoBackend.Models.Compra
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div style="font-size:30px">
        <div style="color:#705FA6">
            <h1 style="font-family:'Shrikhand',sans-serif;">Cadastro de</h1>
        </div>
        <div class="text-light">
            <h1 style="font-family:'Shrikhand',sans-serif;">Compras</h1>
        </div>
    </div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div style="font-family:'Itim',sans-serif;">
                    <div class="justify-content-center p-4 border rounded-4 col-12" style="background:#705FA6;">
                        <div style="color:#FFFFFF;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group mb-3">
                                <label asp-for="FornecedorId" class="control-label">Fornecedor</label>
                                <input asp-for="FornecedorId" class="form-control" />
                                <span asp-validation-for="FornecedorId" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="DataCompra" class="control-label">Data da Compra</label>
                                <input asp-for="DataCompra" class="form-control" />
                                <span asp-validation-for="DataCompra" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ValorTotal" class="control-label">Valor Total</label>
                                <input asp-for="ValorTotal" class="form-control" />
                                <span asp-validation-for="ValorTotal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="font-family:'Itim',sans-serif;" class="col-9 d-flex justify-content-evenly mt-4">
                    <input type="submit" value="Criar" class="btn btn-lg text-light" style="background:#705FA6" />
                    <a asp-action="Index" class="btn btn-lg text-light" style="background:#705FA6">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
