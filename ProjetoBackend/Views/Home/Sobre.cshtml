@{
    ViewData["Title"] = "Sobre nós";
}
<div style="font-family:'Shrikhand', sans-serif;">
    <h1 style="color:#705FA6" class="text-center"> Sobre Nós</h1>
</div>
<div class="mt-5 mb-3" style="font-family:'Itim', sans-serif;">
