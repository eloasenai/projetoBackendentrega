@model ProjetoBackend.Models.Servico

@{
    ViewData["Title"] = "Edit";
}
<div class="container">

    <h1 style="font-family:'Shrikhand',sans-serif;color:#FFFFFF">Edit</h1>

    <h2 style="font-family:'Shrikhand',sans-serif;color:#413271">Serviço</h2>
    <hr />
    <div class="col-md-4">
        <div class="justify-content-center p-3 border rounded-4 col-9" style="background:#413271">
            <div style="font-family:'Itim',sans-serif;">
                <div style="color:#FFFFFF">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ServicoId" />
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ValorServico" class="control-label"></label>
                            <input asp-for="ValorServico" class="form-control" />
                            <span asp-validation-for="ValorServico" class="text-danger"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div style="font-family:'Itim',sans-serif;" class="col-9 d-flex justify-content-evenly">
                <input type="submit" value="Salvar" class="btn text-light" style="background:#413271" />
                <a asp-action="Index" class="btn text-light" style="background:#413271">Voltar</a>
            </div>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
